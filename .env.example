# Telegram API (from https://my.telegram.org)
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here

# Your phone number (with country code, e.g., +5511999999999)
TELEGRAM_PHONE=+1234567890

# Optional: 2FA password (only needed if you have two-factor authentication enabled)
# Leave empty or omit this line if you don't have 2FA - you'll be prompted interactively
# TELEGRAM_PASSWORD=your_2fa_password_here

# Bot token from @BotFather
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Your Telegram user ID (get from @userinfobot)
CLIENT_USER_ID=123456789

# Database connection string
# For local SQLite: sqlite:///secretary.db
# For PostgreSQL: postgresql://user:pass@localhost:5432/secretary
DATABASE_URL=sqlite:///secretary.db

# Optional: Ollama host (defaults to localhost - keep local for privacy!)
OLLAMA_HOST=http://localhost:11434

# Optional settings
SUMMARY_INTERVAL_HOURS=4
MAX_MESSAGES_PER_SUMMARY=15
MIN_PRIORITY_SCORE=1
WARNING_THRESHOLD_SCORE=5
TIMEZONE=America/Sao_Paulo
LOG_LEVEL=INFO

# Group chat filtering - Reduce noise from large/muted groups
IGNORE_LARGE_GROUPS=true
MAX_GROUP_SIZE=20
IGNORE_MUTED_CHATS=true

# AI-based priority scoring (requires Ollama)
# Set to false to use simple rule-based scoring instead
USE_AI_SCORING=true
AI_MODEL=llama3.2:3b
AI_SCORING_TIMEOUT=3.0
